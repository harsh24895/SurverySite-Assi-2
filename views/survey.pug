extends layout

block content
    doctype html

    title Classfied Ads
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Inconsolata')
    link(rel='stylesheet' href='/stylesheets/survey.css')
    style.
      body, html {
      height: 100%;
      font-family: "Inconsolata", sans-serif;
      }



    #menu.w3-container
        .w3-content(style='max-width:900px')
          h5.w3-center.w3-padding-48
            span.w3-tag.w3-large Surveys
          .w3-row.w3-center.w3-card.w3-padding
            a#myLink(href='javascript:void(0)' onclick="openMenu(event, 'View');")
              .w3-col.s6.tablink View
              .w3-col.s6.tablink
            a(href='javascript:void(0)' onclick="openMenu(event, 'View');")
              .w3-col.s6.tablink
                  #Add.w3-container.menu.w3-padding-48
                  #Add.w3-container.menu.w3-padding-48.w3-card

          #View.w3-container.menu.w3-padding-48.w3-card
             h1 Surveys
                table
                    thead
                    
                        th Title
                        th Description

                tbody
                    each survey in allSurvey
                        tr
                            td #{survey.title}
                            td #{survey.description}
                            td
                        tr    
                            td
                             Options
                             .form-check
                                input#exampleRadios1.form-check-input(type='radio', name='exampleRadios', value='option1', checked='')
                                label.form-check-label(for='exampleRadios1')
                                 | Yes
                            .form-check
                                input#exampleRadios2.form-check-input(type='radio', name='exampleRadios', value='option2')
                                label.form-check-label(for='exampleRadios2')
                                 | No
                            .form-check
                                input#exampleRadios3.form-check-input(type='radio', name='exampleRadios', value='option3')
                                label.form-check-label(for='exampleRadios3')
                                 | None
                            input(type='submit' value='submit') 

                            td
                                 a(href="/survey/edit/"+survey._id)
                                     |Edit
                            td
                                 a(href="/survey/delete/"+survey._id title="Delete" onClick="return confirm(\'Aru you sure want to delete it?\');")
                                     |Delete 


    ///Script
    script.
      // Tabbed Menu
      function openMenu(evt, menuName) {
      var i, x, tablinks;
      x = document.getElementsByClassName("menu");
      for (i = 0; i < x.length; i++) {
      x[i].style.display = "none";
      }
      tablinks = document.getElementsByClassName("tablink");
      for (i = 0; i < x.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" w3-dark-grey", "");
      }
      document.getElementById(menuName).style.display = "block";
      evt.currentTarget.firstElementChild.className += " w3-dark-grey";
      }
      document.getElementById("myLink").click();