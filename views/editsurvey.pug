extends layout
block content
  form(method='post' action='/survey/edit')
    input(name='id' type='hidden' value=survey.id)
    div.add
      label Title
      input(name='title' required placeholder='Title' value=survey.title)
    div.add
      label Description
      input(name='description' required placeholder='Description' value=survey.description)
    
    input.adde(type='submit' value='Update')

    